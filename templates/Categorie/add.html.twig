{% extends "base.html.twig" %}

{% block body %}
	<div class='container border border-muted rounded m-4'>
		<h1 class='p-2 mb-4'>Ajout de la catégorie</h1>
		<form class='p-2' method='post'>
			<div class="form-group">
				<label for="Libelle">Titre</label>
				<input type="text" name='Libelle' class="form-control" id="Libelle" aria-describedby="LibelleHelp">
				<small id="titleHelp" class="form-text text-muted">Saisissez le titre de votre catégorie</small>
			</div>
			<div class="form-group">
				<label for="Icone">Icone</label>
				<input type="text" name='Icone' class="form-control" id="Icone" aria-describedby="iconeHelp">
				<small id="descriptionHelp" class="form-text text-muted">Saisissez le code
					<a href='https://fontawesome.com/icons?d=gallery'>FontAwesome<a/>
						correspondant à l'icone que vous voulez voir associée à votre catégorie. Exemple: fas fa-sun
					</small>
				</div>

				<div class="d-flex flex-row-reverse">
					<button type="submit" align='right' class="btn btn-success">Enregistrer les modifications</button>
				</div>
			</form>
		</div>
	{% endblock %}
