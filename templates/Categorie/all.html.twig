{% extends "base.html.twig" %}
{% block title %}
	Toutes les catégories -
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class='container m-4'>
		<h1 class='mb-4'>Voici la liste des catégories</h1>
		<div class="row">
			{% for categorie in categories %}
				<div class="card m-2" style='min-width:15em;'>
					<div class="card-header d-flex justify-content-center align-items-center bg-dark text-white">
						<h5 class="card-title">{{ categorie.Libelle }}
						</h5>
						<span>
							<i class="ml-4 {{ categorie.Icone }}"></i>
						</span>
					</div>
					<div class=" card-body d-flex flex-column justify-content-between">
						<a href="/cesiblog/web19php/public/Categorie/Show/{{ categorie.Id }}" class="m-2 btn btn-info">
							Consulter
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
