{% extends "base.html.twig" %}
{% block title %}
    Liste article >> {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Voici la liste des articles</h1>
    <div class="row">
    {% for article in articleList %}
        <div class="col-sm-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ article.Titre }}</h5>
                       {# Importation des catégories #}
                    {% for key, categorie in categories %}
                        {% if article.CategorieId == key %}
                            <h5><span class="badge badge-secondary">{{ categorie }}</span></h5>
                        {% endif %}
                    {% endfor %}
                    {# Fin importation des catégories #}
                    <p class="card-text">
                        {{ article.getShortDesc(3) }}
                        <br/>
                        Ecrit le {{ article.DateAjout|date("d/m/Y") }}
                    </p>
                    <a href="/cesiblog/web19php/public/Article/Show/{{ article.Id }}" class="btn btn-primary">
                        Consulter
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}