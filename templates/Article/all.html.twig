{% extends "base.html.twig" %}
{% block title %}
	Tous les articles -
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class='container m-4'>
		<h1>Voici la liste des articles</h1>
		<div class="mt-4 d-flex flex-wrap">
			{% for article in articleList %}
				<div class="card m-2" style='min-width:15em; max-width: 15em'>
					<div class="card-header d-flex justify-content-center align-items-center bg-dark text-white">
						<h5 class="card-title">{{ article.Titre }}</h5>
					</div>
					<div class=" card-body d-flex flex-column justify-content-between">
						<span class="p-4 m-2 ">
							<p class="card-text">
								{{ article.getShortDesc(3) }}...
							</p>
						</span>
						<a href="/Article/Show/{{ article.Id }}" class="m-2 btn btn-info">
							Lire la suite
						</a>
					</div>
					<div class="card-footer d-flex flex-column align-items-center">
						{# Importation des catégories #}
						{% for key, categorie in categories %}
							{% if article.CategorieId == key %}
								<h5>
									<span class="badge badge-dark">
										{{ categorie }}</span>
								</h5>
							{% endif %}
						{% endfor %}
						{# Fin importation des catégories #}
						<p class=' mt-0 text-muted'>Ecrit le
							{{ article.DateAjout|date("d/m/Y") }}
						</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
