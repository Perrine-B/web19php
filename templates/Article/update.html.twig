{% extends "base.html.twig" %}

{% block body %}
	<h1>Modification de l'article "{{ article.Titre }}"</h1>

	<form method='post'>
		<div class="form-group">
			<label for="Titre">Titre</label>
			<input type="text" name='Titre' class="form-control" id="Titre" value="{{ article.Titre }}" aria-describedby="titleHelp">
			<small id="titleHelp" class="form-text text-muted">Saisissez le titre de votre article</small>
		</div>
		<div class="form-group">
			<label for="Description">Description</label>
			<textarea type="textarea" name='Description' class="form-control" id="Description" aria-describedby="descriptionHelp">{{article.Description|trim }}</textarea>
			<small id="descriptionHelp" class="form-text text-muted">Saisissez le texte de votre article</small>
		</div>

		<div class="form-group">
			<label for="DateAjout">Date de l'ajout</label>
			<input type="date" value="{{ article.DateAjout }}" name='DateAjout' class="form-control" id="DateAjout" aria-describedby="dateHelp">
			<small id="dateHelp" class="form-text text-muted">Saisissez la date de publication de votre article</small>
		</div>
		<div class="input-group mb-3">
			<div class="input-group-prepend">
				<label class="input-group-text" for="Auteurs">Auteur</label>
			</div>
			<select name='Auteur' class="custom-select" id="Auteurs">
				{% if article.Auteur == "Rebecca" %}
					<option selected>Rebecca</option>
				{% else %}
					<option>Rebecca</option>
				{% endif %}

				{% if article.Auteur == "Alexandre" %}
					<option selected>Alexandre</option>
				{% else %}
					<option>Alexandre</option>
				{% endif %}

				{% if article.Auteur == "Emilie" %}
					<option selected>Emilie</option>
				{% else %}
					<option>Emilie</option>
				{% endif %}

				{% if article.Auteur == "Léo" %}
					<option selected>Léo</option>
				{% else %}
					<option>Léo</option>
				{% endif %}

				{% if article.Auteur == "Aegir" %}
					<option selected>Aegir</option>
				{% else %}
					<option>Aegir</option>
				{% endif %}

			</select>
		</div>

		<div class="input-group mb-3">
			<div class="input-group-prepend">
				<label class="input-group-text" for="CategorieId">Catégorie</label>
			</div>

			<select name="CategorieId" class="custom-select" id='CategorieId'>
				{% for key, categorie in categories %}
					{% if article.CategorieId == key %}
						<option value={{key}} selected>
							{{ categorie }}</option>
					{% else %}
						<option value={{key}}>
							{{categorie}}</option>
					{% endif %}
				{% endfor %}
			</select>
		</div>
		<div class="d-flex flex-row-reverse">
			<button type="submit" align='right' class="btn btn-success">Enregistrer les modifications</button>
		</div>
	</form>
</form>{% endblock %}
